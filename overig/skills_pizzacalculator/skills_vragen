// Prijsinformatie voor verschillende pizza-afmetingen
    const pizzaPrices = {
        small: 5,
        medium: 7,
        large: 10
    };

//2. Welk stuk code is verrantwoordelijk voor het optellen van alle pizza’s?

 // Bereken de bestelling op basis van ingevoerde aantallen
for (const size in pizzaPrices) {
    const quantity = parseInt(document.getElementById(size + "-pizza").value);
        if (quantity > 0) {
            order[size] = quantity;
            total += quantity * pizzaPrices[size];
        }
    }

