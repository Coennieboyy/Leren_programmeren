//1.Welk stuk code is verrantwoordelijk voor het optellen van alle prijzen?

// Functie om de prijs van drankjes te berekenen
function calculateDrinkPrice(drink) {
    // Voeg hier je prijzen voor drankjes toe
    const prices = {
        fris: 2.50,
        bier: 3.00,
        wijn: 4.00,
    };
    return prices[drink] || 0;
}

// Functie om de prijs van snacks te berekenen
function calculateSnackPrice(snack) {
    // Voeg hier je prijzen voor snacks toe
    const prices = {
        frikandel: 2.00,
        bitterballen: 5.00,
        pizza: 7.00,
    };
    return prices[snack] || 0;
}

//2.Welk stuk code is verrantwoordelijk voor het uitlezen van de ingevoerde aantallen?

// Functie om de totaalprijs van de bestelling te berekenen
function calculateTotalPrice() {
    let total = 0;

    for (const drink in order.drinks) {
        total += order.drinks[drink] * calculateDrinkPrice(drink);
    }

    for (const snack in order.snacks) {
        total += order.snacks[snack] * calculateSnackPrice(snack);
    }

    return total;
}

//3.Welk stuk code is verrantwoordelijk voor het starten van de berekeningen?

// Functie om de prijs van drankjes te berekenen
